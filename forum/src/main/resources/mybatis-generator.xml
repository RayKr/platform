<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <properties resource="jdbc.properties"/>

    <!-- flat:为每张表生成一个实体类，简单实用 -->
    <context id="mysqlTables" defaultModelType="flat" targetRuntime="MyBatis3Simple">

        <!-- 自定义注释编码格式 -->
        <property name="javaFileEncoding" value="UTF-8"/>

        <!-- 防止出现含有空格的表名，使用分隔符保证表名的正确性 select * from `user table` -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 使用通用mapper3插件 -->
        <plugin type="${mapper.plugin}">
            <property name="mappers" value="${mapper.Mapper}"/>
        </plugin>

        <!-- 数据库连接配置 -->
        <jdbcConnection driverClass="${jdbc1.driverClass}"
                        connectionURL="${jdbc2.url}"
                        userId="${jdbc2.user}"
                        password="${jdbc2.password}"/>

        <!-- 指定生成的类型为java类型，避免数据库中number等类型字段 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成model模型，对应的包，存放位置可以指定具体的路径,如/ProjectName/src，也可以使用MAVEN来自动生成 -->
        <javaModelGenerator targetPackage="${targetModelPackage}" targetProject="${targetJavaProject}">
            <property name="enableSubPackages" value="true"/>
            <!-- 去掉char类型不必要的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--对应的xml mapper文件  -->
        <sqlMapGenerator targetPackage="${targetXMLPackage}" targetProject="${targetResourcesProject}">
            <!-- MBG会根据catalog和schema来生成子包 -->
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 对应的dao接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="${targetMapperPackage}" targetProject="${targetJavaProject}">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 生成所有的表 -->
        <table tableName="lsp_document_file_info"/>
    </context>

</generatorConfiguration>